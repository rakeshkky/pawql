      type: Float!
      description: The latitude
    - name: longitude
      type: Float!
      description: The longitude
  graphql:
    typeName: get_coordinates
    inputTypeName: get_coordinates_input
  dataConnectorTypeMapping:
    - dataConnectorName: logic
      dataConnectorObjectType: get_coordinates

---
kind: TypePermissions
version: v1
definition:
  typeName: get_coordinates
  permissions:
